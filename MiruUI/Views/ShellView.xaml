<Window x:Class="Miru.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Miru.Views"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="{Binding Path=AppStatusText, Mode=OneWay}" Height="450" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        
        <!-- Row 1 -->
        <xctk:WatermarkTextBox x:Name="TypedInUsername"
                               KeepWatermarkOnGotFocus="True" 
                               Watermark="Enter MAL username that you wish to sync this app to"
                               MinWidth="300" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" />
        <Button Margin="10,0,10,0" x:Name="SyncUserAnimeList" IsDefault="True"
                Grid.Row="1" Grid.Column="4" Content="Sync" MinWidth="50"/>
        <TextBlock Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="3" x:Name="SyncStatusText" TextAlignment="Center" HorizontalAlignment="Center" />

        <!--<DockPanel Grid.Row="2" Grid.RowSpan="4" Grid.Column="1">
            <TextBlock DockPanel.Dock="Top" Text="MONDAY" TextAlignment="Center" Background="Aqua"/>
            <Image Width="90" DockPanel.Dock="Left" Source="https://cdn.myanimelist.net/images/anime/1075/104854.jpg?s=01854c3a3692b838b43d02aef4d40c97" />
            <TextBlock DockPanel.Dock="Top" Text="Hatena"/>
            <TextBlock DockPanel.Dock="Top" Text="Hatena"/>
            <Image Width="90" DockPanel.Dock="Left" Source="https://cdn.myanimelist.net/images/anime/1075/104854.jpg?s=01854c3a3692b838b43d02aef4d40c97" />
        </DockPanel>-->
        <!--<StackPanel Grid.Row="2" Grid.RowSpan="4" Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="MONDAY" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" TextAlignment="Center" Background="Aqua"/>
                <Image Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" Width="90" Source="https://cdn.myanimelist.net/images/anime/1075/104854.jpg?s=01854c3a3692b838b43d02aef4d40c97" />
                <TextBlock Grid.Row="1" Grid.Column="1"  Text="Hatena"/>
                <TextBlock Grid.Row="2" Grid.Column="1"  Text="Hatena"/>
            </Grid>
        </StackPanel>-->

        <!-- Row 2 -->
        <TextBlock Text="MONDAY" Grid.Row="2" Grid.Column="1" TextAlignment="Center" Background="Aqua"/>
        <DataGrid x:Name="SortedAnimeListEntries_MondayAiringAnimeList" HeadersVisibility="None"
                  Grid.Row="3" Grid.Column="1"
                  CanUserResizeColumns="False" CanUserResizeRows="False" CanUserDeleteRows="False"
                  CanUserAddRows="False" CanUserReorderColumns="False" VerticalScrollBarVisibility="Hidden"
                  Grid.RowSpan="4" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <!--<DataGridTextColumn Binding="{Binding Title}" Width="*"/>-->
                <DataGridTextColumn Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0}&#x0d;&#x0a;{1}/{2}">
                            <Binding Path="Title"/>
                            <Binding Path="WatchedEpisodes"/>
                            <Binding Path="TotalEpisodes"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTemplateColumn Width="*"
                                        IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImageURL}" Stretch="Fill" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock Text="TUESDAY" Grid.Row="2" Grid.Column="2" TextAlignment="Center" Background="Aqua"/>
        <TextBlock Text="WEDNESDAY" Grid.Row="2" Grid.Column="3" TextAlignment="Center" Background="Aqua"/>
        <TextBlock Text="THURSDAY" Grid.Row="2" Grid.Column="4" TextAlignment="Center" Background="Aqua"/>
        <TextBlock Text="FRIDAY" Grid.Row="2" Grid.Column="5" TextAlignment="Center" Background="Aqua"/>
        <TextBlock Text="SATURDAY" Grid.Row="2" Grid.Column="6" TextAlignment="Center" Background="Aqua"/>
        <TextBlock Text="SUNDAY" Grid.Row="2" Grid.Column="7" TextAlignment="Center" Background="Aqua"/>

        <!--<TextBlock x:Name="AppStatusText" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="7" HorizontalAlignment="Center"/>-->
    </Grid>
</Window>
